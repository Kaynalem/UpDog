{{#if dogs.length}}
<section>
    <h2>Your Dogs</h2>
    <div class="row dog-list">
        {{#each dogs as |dog|}}
        <div
        {{> dog-info dog}}
        <a href="/dashboard/edit/{{dog.id}}" class="edit-link text-success ">Edit dog</a>
        <a href="/dashboard/dates/{{dog.id}}" class="date-link text-success ">View playdates</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}
<section>
    <h2 class="add">Add a dog</h2>
    <form id="formElem" class="new-dog-form needs-validation" method="post" enctype="multipart/form-data" action="/" novalidate>
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required/>
            <div class="invalid-feedback">
                Please provide your dog's name.
            </div>
        </div>
        <div>
            <label for="age">Age</label>
            <input type="text" id="age" name="age" required/>
            <div class="invalid-feedback">
                Please provide your dog's age.
            </div>
        </div>
        <div>
            <label for="gender">Gender</label>
            <input type="text" id="gender" name="gender" required/>
            <div class="invalid-feedback">
                Please provide your dog's gender.
            </div>
        </div>
        <div>
            <label for="breed">Breed</label>
            <input type="text" id="breed" name="breed" required/>
            <div class="invalid-feedback">
                Please provide your dog's breed.
            </div>
        </div>
        <div>
            <label for="about">About your dog</label>
            <input class="form-control input-lg" id="about" name="about" required/>
            <div class="invalid-feedback">
                Please provide information about your dog.
            </div>
        </div>
        <div class="form-group">
            <label for="dogImage">Your dog's photo</label>
            <input type="file" class="form-control-file" name="dogImage" id="dogImage" onchange="previewFile()" required/>
            <div class="invalid-feedback">
                Please choose a photo of your dog to upload.
            </div>
            <img src="" height="200" alt="">
        </div>
        <button type="submit" class="btn btn-success mb-5">Add</button>
    </form>
</section>
<!--button appears on scroll to allow user to go back to top of page--> 
        <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<script src="/javascript/add-dog.js"></script>
<script src="/javascript/script.js"></script>