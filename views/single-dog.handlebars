<article class="dog m-0">
    <div class="px-0 pb-5 bg-light">
        <div class="dog-profile">
            <img align="left" class="dog-image-lg" src="https://images.unsplash.com/photo-1489065094455-c2d576ff27a0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="Card image cap"/>
            <img align="left" class="dog-image-profile img-thumbnail" src="../uploads/{{dog.dogImage}}" alt="Dog Image"/>
            <div class="dog-profile-text">
                <a class="font-weight-bold text-decoration-none text-success" href="/dog/{{dog.id}}"><h1>{{dog.name}}</h1></a>
                <p class="card-text">{{dog.about}}</p>
            </div>
            
        </div>
        <div class="dogStats">
            <ul class="dogArrange d-flex justify-content-end">
                <li class="dogArrangeSizeFit">

                        <span class="dogStatLabel dogblock">{{format_plural "bone" dog.bone_count}}</span>
                        <span class="dogStatValue text-success">{{dog.bone_count}}</span>
                </li>
                <li class="dogArrangeSizeFit">
                        <span class="dogStatLabel dogblock">{{format_plural "review" dog.reviews.length}}</span>
                        <span class="dogStatValue text-success">{{dog.reviews.length}}</span>
                </li>
            </ul>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <h4 class="text-success">About Me</h4>
                    <ul class="list-group bg-light">
                        
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Age</span>
                            <span class="dogStatValue">{{dog.age}}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Gender</span>
                            <span class="dogStatValue">{{dog.gender}}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Breed</span>
                            <span class="dogStatValue">{{dog.breed}}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Location</span>
                            <span class="dogStatValue">{{dog.user.location}}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Owner</span>
                            <span class="dogStatValue">{{dog.user.username}}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="dogStatLabel dogblock">Pack member since</span>
                            <span class="dogStatValue">{{format_date dog.created_at}}</span>
                        </li>                      
                    </ul>
                </div>
                <div class="col-md-9">
                {{#if loggedIn}}
                    <form class="review-form">
                        <div>
                            <textarea class="form-control mb-2" name="review-body" placeholder="How did I play?"></textarea>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-success m-1">Add review</button>
                            <button type="button" class="upbone-btn btn btn-success m-1">Give a dog a <i class="fas fa-bone"></i> !</button>
                            <button type="button" class="btn btn-success m-1" id="request-date">Request Playdate</button>
                        </div>
                    </form>
                {{/if}}
                {{> reviews dog.reviews}}
                </div>
            </div>
        </div>
    </div>
</article>


{{#if loggedIn}}
<script src="/javascript/review.js"></script>
<script src="/javascript/upbone.js"></script>
<script src="/javascript/request.js"></script>
{{/if}}
<!--button appears on scroll to allow user to go back to top of page--> 
        <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<script src="/javascript/submit-request.js"></script>
<script src="/javascript/script.js"></script>
