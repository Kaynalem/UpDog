<div class="dates">
    {{#each this}}
    <section class="date p-3 mt-3 mb-3 border border-success" id="{{id}}">
        <div class="meta">
        From {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text mt-2 p-3">
        {{date_text}}
        </div>
        <div class="mt-3 mb-2">
        {{#if responded}}
            {{#if accept}}
            <p class="text-success text-center font-weight-bold">Date Accepted</p>
            {{else}}
            <p class="text-danger text-center font-weight-bold">Date Rejected</p>
            {{/if}}
        {{else}}
            <button class="btn btn-success mr-2" onClick="acceptHandler(this)" name="{{id}}">Accept</button> <button class="btn btn-danger" onClick="rejectHandler(this)" name="{{id}}">Reject</button>
        {{/if}}
        </div>
    </section>
    {{/each}}
</div>

<script src="/javascript/date-response.js"></script>